<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.MainActivity">

    <Button
        android:id="@+id/bt_alunos_pesquisar"
        android:layout_width="172dp"
        android:layout_height="74dp"
        android:layout_margin="@dimen/main_button_margin"
        android:background="@drawable/round_button"
        android:text="@string/txt_alunos_todos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nome_pesquisar"
        app:layout_constraintVertical_bias="0.859"

        />

    <EditText
        android:id="@+id/et_nome_pesquisar"
        android:layout_width="365dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_pesquisa"
        android:hint="@string/tb_hint"/>

    <TextView
        android:id="@+id/tx_pesquisa"
        android:layout_width="219dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:text="@string/txt_pesquisar"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>